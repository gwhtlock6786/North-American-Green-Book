
<%- include("../partials/header") %>


<div class="container formBackground">
    <div class="text-center row justify-content-center">
        <div id="myform">
            <h1>Register!</h1>

            <form action="/register" method="POST">

                <div class="form-group">
                    <label for="usernameForm">Enter Username</label>
                    <input class="form-control" type="text" name="username" id="usernameForm" placeholder="username">
                </div>
                <div class="form-group">
                    <label for="passwordForm">Enter Password</label>
                    <input  class="form-control" type="text" name="password" id="passwordForm" placeholder="password">
                </div>
                <div class="form-group">
                    <label for="role">Select your Role:</label>
                
                    <select name="role" id="role">
                        <option value="champion">Champion</option>
                        <option value="recruiter">Recruiter</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nameForm">Enter Full Name</label>
                    <input  class="form-control" type="text" name="name" id="nameForm" placeholder="First Last">
                </div>
                <div class="form-group">
                    <label for="emailForm">Enter emailForm</label>
                    <input  class="form-control" type="text" name="email" id="emailForm" placeholder="email">
                </div>
                <div class="form-group">
                    <label for="phoneForm">Enter Contact Number</label>
                    <input  class="form-control" type="text" name="phone" id="phoneForm" placeholder="Phone Number">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-warning">Submit!</button>
                </div>
            </form>
            <a href="/champions">Go Back!</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>

 