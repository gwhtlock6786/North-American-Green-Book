<%- include("../partials/header") %>

<div class="container">
    <div class="row text-center">
        <div class="myform">
            <h1>Welcome New Champion</h1>
            <h3>Enter your Information Below!!</h3>
           

            <form action="/champions" method="POST">

                <div class="form-group">
                    <label for="nameForm">Enter your Name</label>
                    <input class="form-control" type="text" name="champ[name]" id="nameForm" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="proForm">Enter your Profession</label>
                    <input class="form-control" type="text" name="champ[profession]" id="proForm" placeholder="profession">
                </div>
                <!-- Make this a select option drop down that list all professions and also offers an other option that will allow for a typed in response -->
                <div class="form-group">
                    <label for="proTForm">Enter your Profession</label>
                    <input class="form-control" type="text" name="champ[professionalTitle]" id="proTForm" placeholder="profession">
                </div>
                <div class="form-group">
                    <label for="imageForm">Enter your Image url</label>
                    <input  class="form-control" type="text" name="champ[image]" id="imageForm" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="detailForm">Enter Description of New Campground</label>
                    <input  class="form-control" type="text" name="champ[details]" id="detailForm" placeholder="describe Yourself!!">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-warning">Submit!</button>
                </div>
            </form>
            <a href="/champions">Go Back!</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>