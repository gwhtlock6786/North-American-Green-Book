
      <%- include("../partials/header") %>

      <div class="container">
        <div class="jumbotron">
          <h1>Welcome to the North American Greenbook</h1>
        </div>

        <hr/>
      
          <div class="row justify-content-center">
              <div class="col-lg-2 col-md-6 col-sm-lg">
                  <h1><i class="fas fa-users"></i></h1>
                  <h4>Thought<br>Leaders</h4>
                  <p>In Policy Reform</p>
              </div>
              <div class="col-lg-2 col-md-6 col-sm-lg">
                  <h1><i class="fas fa-vector-square"></i></h1>
                  <h4>Supply<br>Chain</h4>
                  <p>Experts and Companies</p>
              </div>
              <div class="col-lg-2 col-md-6 col-sm-lg">
                  <h1><i class="fas fa-user-circle"></i></h1>
                  <h4>Top<br>Executives</h4>
                  <p>For Diversity, Equity and Inclusion</p>
              </div>
              <div class="col-lg-2 col-md-6 col-sm-lg">
                  <h1><i class="fas fa-keyboard"></i></h1>
                  <h4>Venders<br>Entrepreneurs</h4>
                  <p>Hidden Figures of Success and Engagement</p>
              </div>
              <div class="col-lg-2 col-md-6 col-sm-lg">
                  <h1><i class="fas fa-archive"></i></h1>
                  <h4>D & I Leaders</h4>
                  <p>We Lead in Inclusive Innnovation</p>
              </div>
          </div>

          <hr/>
      
        
          <section id="champions" class="rounded">

            <div class="container">
              <div class="jumbotron">
                <h3 id="cTitle">Champions</h3>
                <h1 id="cSub1">These Champions will inspire you to create a new future</h1>
                <h5 id="cSub2">The North America Economic Green Book was created to amplify and assist Corporate America  with promises of inclusion, increased engagement and positioning partnerships to engage underutilized stakeholders and consumers.</h5>
              </div>
            <div class="row">

                <% champions.forEach(function(champ){ %>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card mx-auto my-5" style="width: 18rem;">
                      <div class="card-header"> <h5 class="card-title"><%= champ.name %></h5></div>
                        <img src="<%= champ.image %>" class="card-img-top" alt="..." height="200" width="200">
                        <% if (currentUser) { %>
                          <div class="card-body">
                            <a href="/champions/<%= champ.id %>" class="btn btn-primary">Details</a> 
                          </div>
                      <% } %>
                    </div>
                  </div>


                <% }) %>


              </div>

        </section>


       

      </div>
      
